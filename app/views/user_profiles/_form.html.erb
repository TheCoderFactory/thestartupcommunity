<%= simple_form_for [@user, @user_profile], :input_html => { :multipart => true } do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :tagline, :input_html => { :class => "input-xxlarge" }, :label => 'Describe yourself in one line' %>
    <%= f.input :about, :input_html => { :rows => 5, :class => "span6" }, :label => 'About me - please introduce yourself, your startups/businesses, skills, interests', :required => true %>
    <%= f.input :email, :hint => "Your email will not be displayed on your profile unless you enter it here." %>
    <%= f.input :phone %>
    <%= f.input :url, :label => 'Your personal website or blog URL', :placeholder => "http://www.my-business.com" %>
    <%= f.input :twitter, :label => 'Twitter handle', :placeholder => '@twitter' %>
    <%= f.input :facebook, :label => 'Facebook profile URL', :placeholder => "https://facebook.com/your-business-name" %>
    <%= f.input :google, :label => 'Google+ profile URL', :placeholder => 'https://plus.google.com/xxxxx' %>
    <%= f.input :linkedin, :label => 'LinkedIn profile URL', :placeholder => 'https://linkedin.com/xxxxx' %>
    <%= f.input :github, :label => 'Github profile URL', :placeholder => 'https://github.com/xxxxx' %>
    <%= f.input :image, :as => :file %>
  </div>

  
    <%= f.submit 'Create your profile', :class => "btn btn-success" %>
  
<% end %>
