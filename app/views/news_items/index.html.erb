<h1>Listing news_items</h1>

<table>
  <tr>
    <th>User</th>
    <th>Title</th>
    <th>Url</th>
    <th>Content</th>
    <th>Votes</th>
    <th>Flagged</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @news_items.each do |news_item| %>
  <tr>
    <td><%= news_item.user %></td>
    <td><%= news_item.title %></td>
    <td><%= news_item.url %></td>
    <td><%= news_item.content %></td>
    <td><%= news_item.votes %></td>
    <td><%= news_item.flagged %></td>
    <td><%= link_to 'Show', news_item %></td>
    <td><%= link_to 'Edit', edit_news_item_path(news_item) %></td>
    <td><%= link_to 'Destroy', news_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

